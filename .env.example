# MongoDB Configuration
MONGODB_USERNAME=your_username
MONGODB_PASSWORD=your_password
MONGODB_HOST=your_cluster.mongodb.net
MONGODB_DATABASE_NAME=tamagotcho
MONGODB_PARAMS=?retryWrites=true&w=majority
MONGODB_APP_NAME=tamagotcho

# Authentication (Better Auth)
BETTER_AUTH_SECRET=your_secret_key_here
BETTER_AUTH_URL=http://localhost:3000

# Cron Job Security (Optionnel - pour sécuriser l'endpoint de mise à jour automatique)
# Si non défini, l'endpoint sera accessible sans authentification
CRON_SECRET_TOKEN=your_cron_secret_token_here

# Variables publiques (accessibles côté client)
NEXT_PUBLIC_CRON_SECRET_TOKEN=your_cron_secret_token_here
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here